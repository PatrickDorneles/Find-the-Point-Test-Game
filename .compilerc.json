{
  "env": {
    "development": {
      
      "text/typescript": {
        "target": "es2017",
        "lib": ["dom", "es6"],
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "babel": {
            "plugins": ["transform-es2015-modules-commonjs"]
        }
      },
      "text/less": {
        "dumpLineNumbers": "comments"
      }
    },
    "production": {
      "text/typescript": {
        "sourceMaps": "none"
      }
    }
  }
}